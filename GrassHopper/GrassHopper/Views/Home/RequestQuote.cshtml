@model GrassHopper.Models.Quote

<div class="container mt-5 slide-in materialize-form">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <link rel="stylesheet" href="~/css/site2.css">
    <div class="row justify-content-center">
        <div class="col s12 m6">
            <h2 class="mb-4">Request a Quote</h2>
            <form asp-action="SubmitQuote" method="post">
                <div class="input-field mb-3">
                    <input asp-for="FName" class="validate" />
                    <label asp-for="FName">First Name</label>
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>
                <div class="input-field mb-3">
                    <input asp-for="LName" class="validate" />
                    <label asp-for="LName">Last Name</label>
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>
                <div class="input-field mb-3">
                    <input asp-for="PhoneNumber" type="tel" class="validate" />
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-field mb-3">
                    <input asp-for="Email" type="email" class="validate" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field mb-3">
                    <textarea asp-for="Body" class="materialize-textarea validate" rows="4"></textarea>
                    <label asp-for="Body">Message</label>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <button type="submit" class="btn primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}