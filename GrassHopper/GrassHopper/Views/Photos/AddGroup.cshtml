@model GroupUploadVM
@{
    ViewData["Title"] = "Add Group";
}

<!--THIS PAGE IS NOT STYLED CORRECTLY, FIX LATER-->
<div class="accordion-container">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    Photos
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <div class="row p-2">
                        <a asp-controller="Photos" asp-action="AddPhoto" class="btn primary col-md-5 m-2">Add a Photo</a>
                        <a asp-controller="Photos" asp-action="Index" class="btn primary col-md-5 m-2">View Photos</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                    Group Photos
                </button>
            </h2>
            <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <div class="row p-2">
                        <a asp-controller="Photos" asp-action="AddGroup" class="btn primary col-md-5 m-2">Add a Group</a>
                        <a asp-controller="Photos" asp-action="Groups" class="btn primary col-md-5 m-2">View Groups</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                    Hidden Groups and Photos
                </button>
            </h2>
            <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <div class="row p-2">
                        <a asp-controller="Photos" asp-action="HiddenPhotos" class="btn primary col-md-5 m-2">Hidden Photos</a>
                        <a asp-controller="Photos" asp-action="HiddenGroups" class="btn primary col-md-5 m-2">Hidden Groups</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h1>Upload a group of photos: </h1>

<form method="post" asp-action="AddGroup" enctype="multipart/form-data" class="form-container">
    <div class="form-group">
        <label asp-for="GroupName">Name:</label>
        <input asp-for="GroupName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="GroupDescription">Description:</label>
        <input asp-for="GroupDescription" class="form-control">
    </div>
    <small class="form-text text-muted">Hold down SHIFT or CTRL to select multiple files</small>
    <div class="form-group">
        <div class="custom-file">
            <input asp-for="Files" type="file" class="custom-file-input" accept="image/*" required multiple>
            <small class="form-text text-muted">Accepted file types: .jpg, .jpeg, .png</small>
        </div>
    </div>
    <button type="submit" class="btn primary primary">Submit</button>
</form>