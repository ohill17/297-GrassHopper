@model IEnumerable<GroupVM>
@{
	ViewData["Title"] = "Groups";
}

<!--THIS PAGE IS NOT STYLED CORRECTLY, FIX LATER-->

<div class="row p-2">
	<a asp-controller="Photos" asp-action="AddPhoto" class="btn primary col-md-2">Add a Photo</a>
	<span class="col-md-1"></span>
	<a asp-controller="Photos" asp-action="AddGroup" class="btn primary col-md-2">Add a Group</a>
	<span class="col-md-1"></span>
	<a asp-controller="Photos" asp-action="Index" class="btn primary col-md-2">View Photos</a>
	<span class="col-md-1"></span>
	<a asp-controller="Photos" asp-action="Groups" class="btn primary col-md-2">View Groups</a>
</div>
<div class="row p-2">
	<a asp-controller="Photos" asp-action="HiddenPhotos" class="btn primary col-md-2">Hidden Photos</a>
	<span class="col-md-1"></span>
	<a asp-controller="Photos" asp-action="HiddenGroups" class="btn primary col-md-2">Hidden Groups</a>
</div>

<h1>Hidden Groups</h1>

@foreach (GroupVM g in Model)
{
	//THIS MIGHT NOT WORK ON AZURE, TEST AGAIN LATER
	<h4>@g.Name</h4>
	<span>@g.Description</span>
	<hr>
	@foreach (PhotoVM p in g.Photos)
	{
		string url = "/photos/" + p.Url;
		<img src="@url" alt="@p.Description" style="aspect-ratio:auto; width:50%;">
		<hr>
	}
	<br>
	<a asp-controller="Photos" asp-action="DeleteGroup" asp-route-groupId="@g.GroupId" class="btn danger">Delete Group</a>

	<a asp-controller="Photos" asp-action="EditGroup" asp-route-groupId="@g.GroupId" class="btn">Edit Group</a>

	<hr>
	<a asp-controller="Photos" asp-action="RestoreGroup" asp-route-groupId="@g.GroupId" class="btn">Restore Group</a>
	<hr>
}