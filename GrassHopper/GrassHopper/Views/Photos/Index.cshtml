<div class="row row-cols-1 row-cols-md-3 g-4">
	@foreach (PhotoVM p in Model)
	{
		string url = "/photos/" + @p.Url;
		<div class="col">
			<div class="card">
				<img src="@url" class="card-img-top" alt="@p.Description" />
				<div class="card-body">
					@if (p.Group != null)
					{
						<h5 class="card-title">@p.Group.GroupName</h5>
					}
					else
					{
						<h5 class="card-title">@p.Name</h5>
					}
					<p class="card-text">@p.Description</p>
				</div>
				<div class="card-footer">
					<a asp-controller="Photos" asp-action="EditPhoto" asp-route-photoId="@p.PhotoId" class="btn">Edit Photo</a>
				</div>
			</div>
		</div>
	}
</div>